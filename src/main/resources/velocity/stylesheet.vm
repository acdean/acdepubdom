body.text {margin-left:2%; margin-right:2%; margin-top:5%; text-align:justify;}
body.image {margin:0px;}
h1 {text-align:center; line-height:1em;}
h1.subtitle {text-align:center; line-height:1em; font-size:1.5em; font-style:italic;}
h2 {text-align:center; line-height:1em;}
h3 {text-align:center; margin-top:10px; margin-bottom:10px;}
h4 {text-align:center; line-height:1em;}
h5 {text-align:center; line-height:1em;}
h6 {text-align:center; line-height:1em;}
table {margin-top:10px; margin-bottom:10px;}
p {text-indent:30px; margin-top:0px; margin-bottom:0px;}
p.p0 {text-indent:0px;}
p.p1 {text-indent:30px;}
p.p2 {text-indent:60px;}
p.p3 {text-indent:90px;}
p.p4 {text-indent:120px;}
