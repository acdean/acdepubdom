.poem1 {margin-left:30px; margin-top:0px; margin-bottom:0px;}
.poem2 {margin-left:60px; margin-top:0px; margin-bottom:0px;}
.poem3 {margin-left:90px; margin-top:0px; margin-bottom:0px;}
.poem4 {margin-left:120px; margin-top:0px; margin-bottom:0px;}
.poem5 {margin-left:150px; margin-top:0px; margin-bottom:0px;}
.smallcaps {font-variant: small-caps; font-size: smaller;}
.sc {font-variant: small-caps; font-size: smaller;}
pre {font-family:monospace; font-size: smaller;}
.speaker {text-align: left; margin-top: 0px; margin-bottom: 0px;}
.speech {margin-top: 0px; margin-left: 30px; display: block; white-space: pre-line; }
.direction {font-style: italic;}
